{% set theme_color = app.request.hasPreviousSession and app.session.get('theme_color') ? app.session.get('theme_color') : 'primary' %}

<!DOCTYPE html>
<html lang="fr" data-theme-color="{{ theme_color }}">
    <head>
        <title>{% block title %}{% endblock %} | Application Assia</title>
        <meta charset="utf-8"/>
        <meta name="robots" content="noindex">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" href="{{ asset('images/logo_assia.ico') }}"/>
        <meta property="og:title" content="Application Assia"/>
        <meta property="og:type" content="application"/>
        <meta property="og:url" content="https://app-assia.org"/>
        <meta property="og:image" content=""/>
        <meta name="description" content="Application dâ€™Accompagnement Social et Solidaire Inter-Associative"/>
    </head>

    <body id="body">
        <div id="loader" role="status">
            <div class="d-flex flex-column align-items-center text-primary">
                <i class="fas fa-circle-notch"></i>
                <span class="small" data-value="Chargement...">Chargement...</span>
            </div>
        </div>

        <main class="min-vh-100">
            <header>
                {% include '_shared/_navbar.html.twig' %}
            </header>   

            {% block body %}{% endblock %}

            {% include '_shared/_alert_message.html.twig' %}
            {% include '_shared/_auto_logout.html.twig' %}

            {% if app_env != 'test' %}
                <a id="scroll-top" href="#body">
                    <i class="fa fa-chevron-up"></i>
                </a>
            {% endif %}

        </main>

        {% include '_shared/_footer.html.twig' %}

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}{% endblock %}

    </body>
</html>