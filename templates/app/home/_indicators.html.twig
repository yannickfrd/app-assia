 {% extends 'model/_accordion.html.twig' %}

 {% block accordion_title %}Indicateurs généraux{% endblock %}

 {% block accordion_body %}
    <div class="row">
        <div class="col-md-12">
            <p><a class="text-primary" href="{{ path('daily_indicators') }}">Voir les indicateurs quotidiens d'activité</a></p>
        </div>
    </div> 
    <div class="row">
        <div class="col-md-12 col-lg-8 table-responsive">
            <table id="table-notes" class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th class="align-middle th-w-150">Indicateur</th>
                        {% for item in ['Nb total', 'Hier', 'Aujourd\'hui'] %}
                            <th class="align-middle w-min-70 th-w-100 text-end">{{ item }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {% for key, items in indicators %}
                        <tr>
                            <td class="align-middle">{{ key }}</td>
                            {% for item in items %}
                                <td class="align-middle text-end">{{ item > 0 ? item|number : '-' }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
 {% endblock %}