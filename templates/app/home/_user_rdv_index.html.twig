{% extends 'model/_accordion.html.twig' %}

{% set rdv_index = false %}

{% block accordion_title %}Mes prochains rendez-vous{% endblock %}

{% block accordion_body %}
    <div class="row">
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" href="{{ path('calendar') }}">Voir mon agenda</a>
            </p>
        </div>
    </div>
    <div>
        <div class="table-responsive">
            <table id="table_rdvs" class="table table-striped table-hover text-dark">
                <thead>
                <tr>
                    <th scope="col" class="align-middle th-w-20"></th>
                    <th scope="col" class="align-middle th-w-160">Titre du rendez-vous</th>
                    <th scope="col" class="align-middle th-w-120">Date</th>
                    <th scope="col" class="align-middle th-w-100">Rappel(s)</th>
                    <th scope="col" class="align-middle th-w-80">Lieu</th>
                    <th scope="col" class="align-middle th-100">Nom du suivi</th>
                    <th scope="col" class="align-middle th-w-1<<<<éà">Créé le</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                    {% for rdv in rdvs %}
                        {{ include('app/rdv/_rdv_tr_component.html.twig') }}
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun rendez-vous à venir.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
