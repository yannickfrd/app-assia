 {% extends "model/collapseCard.html.twig" %}

 {% set id = "indicators" %}

 {% block card_title %}Indicateurs généraux{% endblock %}

 {% block card_body %}

    <div class="row">
        <div class="col-md-12">
            <p><a class="text-{{ theme_color }}" href="{{ path('daily_indicators') }}">Voir les indicateurs quotidiens d'activité</a></p>
        </div>
    </div> 
    <div class="row">
        <div class="col-md-12 col-lg-8 table-responsive">
            <table id="table-notes" class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th class="align-middle th-w-150">Indicateur</th>
                        {% for item in ["Nb total", "Hier", "Aujourd'hui" ] %}
                            <th class="align-middle w-min-70 th-w-100 text-right">{{ item }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for key, items in indicators %}
                        <tr>
                            <td class="align-middle">{{ key }}</td>
                            {% for item in items %}
                                <td class="align-middle text-right">{{ item|number_format(0, ",", " ") }}</td>
                            {% else %}
                                <td class="align-middle text-right">{{ items|number_format(0, ",", " ") }}</td>
                                <td colspan="2"></td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

 {% endblock %}