{% extends 'base.html.twig' %}

{% set title = 'Paramètrage' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}

        <section>
            <h1 class="h2 mb-3">{{ title }}</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a class="text-{{ theme_color }}" href="{{ path('managing') }}">Gestion</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
                </ol>
            </nav>

            {% include "model/_msgFlash.html.twig" %}

            <hr>

            <div class="row">
                <div class="col-md-12"><h2 class="h4 mb-3">Archivage et purge de données</h2></div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.archivingTime) }}</div>
                <div class="col-md-6">{{ form_row(form.deletionTime) }}</div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12"><h2 class="h4 mb-3">Rappels</h2></div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">{{ form_row(form.weeklyAlert) }}</div>
                <div class="col-md-6">{{ form_row(form.dailyAlert) }}</div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <div class="float-right">
                        <button type="submit" id="send" name="send" class="btn btn-{{ theme_color }} shadow">Enregistrer</button>
                    </div>
                </div>
            </div>
        </section>
    </div>

    {% block javascripts %}
        {#        {{ encore_entry_script_tags("service") }}#}
    {% endblock javascripts %}


{% endblock %}

