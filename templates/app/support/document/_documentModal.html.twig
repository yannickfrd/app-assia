{% form_theme documentForm "bootstrap_4_layout.html.twig" %}

<div id="document-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="documentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            {{ form_start(documentForm) }}
            <div class="modal-body pb-0">
                {{ form_row(documentForm.name) }}
                {{ form_row(documentForm.type) }}
                {{ form_row(documentForm.content) }}
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <div class="float-left">
                    <button id="modal-btn-delete" class="mr-3 btn btn-danger d-block" 
                        data-toggle="tooltip" data-placement="bottom" title="Supprimer le document"><span 
                        class="fas fa-trash-alt"></span><span class="d-none d-md-inline ml-2">Supprimer</span></button>
                </div>
                <div class="float-right">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" id="js-btn-update" class="btn btn-{{ theme_color }} shadow" 
                        data-action="update"><span class="fas fa-save mr-2"></span>Mettre Ã  jour</button>
                </div>
            </div>
            {{ form_row(documentForm._token) }}
            {{ form_end(documentForm) }}
        </div>
    </div>
</div>