{% form_theme dropzoneForm "bootstrap_4_layout.html.twig" %}

<div id="dropzone-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="DropzoneModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="mb-0">Ajouter des fichiers</h2>
            </div>
            {{ form_start(dropzoneForm) }}
            <div class="modal-body pb-0">
                <div class="form-group row">
                    <div class="col-md-12">
                        {% set dropzone_content %}
                            <div class='row' style='min-height: 200px;'>
                                <div class='col-md-12 m-auto'>
                                    <p class='align-middle text-center text-secondary'>{{ 'document.file.placeholder'|trans({}, 'forms') }}</p>                            
                                </div>
                            </div>
                        {% endset %}
                        <div class="dropzone card p-2 cursor-pointer" id="dropzone" data-placeholder="{{ dropzone_content }}"></div>
                    </div>
                    <div class="col-sm-12 sr-only">{{ form_widget(dropzoneForm.file) }}</div>
                    <div class="col-sm-12">{{ form_help(dropzoneForm.file) }}</div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="float-right">
                    <button type="button" name="close" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" name="clear" class="btn btn-secondary" data-dismiss="modal">Effacer</button>
                    {# <button type="submit" id="js-btn-send" class="btn btn-{{ theme_color }} shadow" 
                        data-action="send"><span class="fas fa-cloud-upload-alt mr-2"></span>Envoyer</button> #}
                </div>
            </div>
            {{ form_row(dropzoneForm._token) }}
            {{ form_end(dropzoneForm) }}
        </div>
    </div>
</div>