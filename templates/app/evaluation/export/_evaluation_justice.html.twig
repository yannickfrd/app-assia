{% import 'macros/p_view.html.twig' as p_view %}
{% import 'macros/textarea_view.html.twig' as textarea_view %}

<hr/>
<h2 style="{{ style_h2 }}">Situation judiciaire</h2>
{% for eval_person in evaluation.evaluationPeople %}
    {% set eval_justice = eval_person.evalJusticePerson %}
    {% if eval_justice %}
        {% if nb_people > 1 %}
            <p style="{{ style_h3 }}"><u>{{ eval_person.supportPerson.person.fullname }}</u> :</p>
        {% endif %}
        {{ p_view.get(eval_justice.justiceStatusToString, 'Justice status', 'evaluation') }}
        {{ p_view.get(eval_justice.justiceActToString, 'Justice act', 'evaluation') }}
        {{ textarea_view.get(eval_justice.commentEvalJustice, null, null, type) }}
    {% endif %}
{% endfor %}