{% import "macros/viewDiv.html.twig" as view_div %}

<hr/>
<section>
    <div class="d-flex mb-3">
        <h2 class="h4">Justice</h2>
            <span class="align-content-center"><a href="{{ path('support_evaluation_view', {'id': support.id }) }}" 
                class="text-{{ theme_color }} ml-2" title="Modifier l'Ã©valuation sociale"><span class="fas fa-edit"></span></a>
            </span>
    </div>

    {% set eval_people_justice = eval_people|filter(e => e.evalJusticePerson) %}
    {% for evalPerson in eval_people_justice %}
        {% set evalJustice = evalPerson.evalJusticePerson %}
        <div class="my-3">
            {% if nb_people > 1 %}
                <div class="row mb-2">
                    <div class="col-md-12 font-weight-bold"><span class="text-underline">{{ evalPerson.supportPerson.person.fullname }}</span> :</div>
                </div>
            {% endif %}
            <div class="row">
                {{ view_div.get(evalJustice.justiceStatusToString, "Justice status", "evaluation") }}
                {{ view_div.get(evalJustice.justiceActToString, "Justice act", "evaluation") }}
            </div>
            <div class="row my-2">
                <div class="col-md-12 justify">{{ evalJustice.commentEvalJustice|nl2br }}</div>
            </div>
        </div>
    {% endfor %}
</section>