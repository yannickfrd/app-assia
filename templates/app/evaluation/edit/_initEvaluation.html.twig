{% extends "app/evaluation/edit/model/_evaluationAccordion.html.twig" %}

{% import "macros/loopSupportPeople.html.twig" as utils %}

{% block card_title %}<span class="{{ EDIT_MODE ? 'text-secondary' }}">Situation à l'entrée</span>{{ parent() }}{% endblock %}

{% block card_body %}

	<p class="mb-4 p-2 border border-warning"><span class="fas fa-exclamation-triangle text-warning mr-1"></span><!--
		-->Attention, cet encart <b>ne doit être compléter qu'au début du suivi</b>. <!--
		-->Il ne doit pas être mise à jour par la suite (sauf information manquante ou erronée).</p>

	<div>
	    <div class="row mb-3">
			<div class="col-md-6"> {{ form_row(form.evalSocialGroup.reasonRequest) }}</div>
			<div class="col-md-6"> {{ form_row(form.evalSocialGroup.wanderingTime) }}</div>
    	</div>
		<div class="row mb-3">
			<div class="col-md-6">{{ form_row(form.initEvalGroup.housingStatus) }}</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">{{ form_row(form.initEvalGroup.siaoRequest) }}</div>
			<div class="col-md-6">{{ form_row(form.initEvalGroup.socialHousingRequest) }}</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 accordion" id="accordion_initEval">
			{{ utils.loopSupportPeople(accordion_id, evaluationPeople, support, theme_color) }}

			{% for key, form_eval_person in evaluationPeople %}
				{% set form_init_eval_person = form_eval_person.initEvalPerson %}
				{% set support_person_id = form_eval_person.vars.value.supportPerson.id %}
				{% set entity = "initEvalPerson" %}
				{% set prefixId = "evaluation_evaluationPeople_" ~ key ~ "_initEvalPerson" %}

				<div id="collapse_{{ prefixId }}" class="collapse {% if loop.first %}show{% endif %} my-3"
					aria-labelledby="heading_{{ prefixId }}" data-parent="#accordion_initEval"
					data-sp-id="{{ support_person_id }}">
					<div class="row mb-3">
						<div class="col-md-6">{{ form_row(form_init_eval_person.paper) }}</div>
						<div class="col-md-6" data-parent-field="{{ prefixId }}_paper"  
							data-options="1|3">{{ form_row(form_init_eval_person.paperType) }}</div>
					</div>			
					{% if form_eval_person.vars.value.supportPerson.person.age > 16 %}
						<div class="row">
							<div class="col-md-6">{{ form_row(form_init_eval_person.rightSocialSecurity) }}</div>
							<div class="col-md-6" data-parent-field="{{ prefixId }}_rightSocialSecurity"
								data-options="1|3">{{ form_row(form_init_eval_person.socialSecurity) }}</div>
						</div>		
						<div class="row mb-3">
							<div class="col-md-6">{{ form_row(form_init_eval_person.familyBreakdown) }}</div>
							<div class="col-md-6">{{ form_row(form_init_eval_person.friendshipBreakdown) }}</div>
						</div>
						<div class="row mb-3">
							<div class="col-md-6">{{ form_row(form_init_eval_person.profStatus) }}</div>
							<div class="col-md-6" data-parent-field="{{ prefixId }}_profStatus"
								data-options="3|5|8">{{ form_row(form_init_eval_person.contractType) }}</div>
						</div>
						<div class="row mb-3">
							{% include "app/evaluation/edit/_resources.html.twig" with {'form_eval_budget_person': form_init_eval_person} %}
							<div class="col-md-6">
								<div class="row mb-3">
									<div class="col-md-12">{{ form_row(form_init_eval_person.debt) }}</div>
									<div class="col-md-12" data-parent-field="{{ prefixId }}_debt"
										data-options="1">{{ form_row(form_init_eval_person.debtsAmt) }}</div>
								</div>
							</div>
						</div>
					{% endif %}
					<div class="row mb-3">
                        {{ form_label(form_init_eval_person.comment) }}
                        <div class="col-md-12">
                            {{ form_widget(form_init_eval_person.comment) }}
                        </div>
                    </div>
				</div>
			{% endfor %}
		</div>
	</div>
	{{ parent() }}
	
{% endblock %}