{% extends "app/evaluation/edit/model/_evaluationAccordion.html.twig" %}

{% import "macros/loopSupportPeople.html.twig" as utils %}

{% block card_title %}Famille{{ parent() }}{% endblock %}

{% block card_body %}

    <div class="row mb-3">
        <div class="col-md-12 accordion" id="accordion-eval_family">
            {{ utils.loopSupportPeople(accordion_id, evaluationPeople, support, theme_color) }}

            {% for key, evalPerson in evaluationPeople %}
                {% set supportPerson = evalPerson.vars.value.supportPerson %}
                {% set prefix = "evaluation_evaluationPeople_" ~ key ~ "_evalFamilyPerson" %}
                <div id="collapse-eval_family-{{ key }}" class="collapse {% if loop.first %}show{% endif %} my-3"
                    aria-labelledby="heading-eval_family-{{ key }}" data-parent="#accordion-eval_family" 
                    data-sp-id="{{ evalPerson.vars.value.supportPerson.id }}">

                    {% if supportPerson.role != ROLE_CHILD %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.maritalStatus) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_maritalStatus" data-options="6">
                                {{ form_row(evalPerson.evalFamilyPerson.noConciliationOrder) }}</div>
                        </div>
                        {% if supportPerson.person.gender == GENDER_FEMALE and supportPerson.person.age < 50 %}
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.unbornChild) }}</div>
                                </div>
                                <div class="row" data-parent-field="{{ prefix }}_unbornChild" data-options="1">
                                    <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.expDateChildbirth) }}</div>
                                    <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.pregnancyType) }}</div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.protectiveMeasure) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_protectiveMeasure" data-options="1|3">
                                {{ form_row(evalPerson.evalFamilyPerson.protectiveMeasureType) }}</div>
                        </div>
                    {% endif %}

                    {% if supportPerson.role == ROLE_CHILD %}
                        <div class="row">
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.childcareOrSchool) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_childcareOrSchool" data-options="1">
                                {{ form_row(evalPerson.evalFamilyPerson.childcareSchoolType) }}</div>
                        </div>
                        <div class="row mb-3" id="school_location_{{ key }}" data-parent-field="{{ prefix }}_childcareOrSchool" 
                            data-options="1">
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.schoolSearch) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.schoolCity) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.schoolZipcode) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.schoolChildCarePrecision) }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.childToHost) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalFamilyPerson.childDependance) }}</div>
                        </div>
                    {% endif %}

                    <div class="row mb-3">
                        <div class="col-md-12">{{ form_label(evalPerson.evalFamilyPerson.commentEvalFamilyPerson) }}</div>
                        <div class="col-md-12">{{ form_widget(evalPerson.evalFamilyPerson.commentEvalFamilyPerson) }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <hr/>
    {% if nb_children > 0 %}
        <div class="row mb-3">
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.pmiFollowUp) }}</div>
            <div class="col-md-6" data-parent-field="evaluation_evalFamilyGroup_pmiFollowUp"
                data-options="1">{{ form_row(form.evalFamilyGroup.pmiName) }}</div>
        </div>
    {% endif %}
    <div class="mb-3" data-parent-field="evaluation_evaluationPeople_0_evalAdmPerson_nationality" data-options="2|3|4">
        <div class="row">
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.childrenBehind) }}</div>
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.famlReunification) }}</div>
            <div class="col-md-6" data-parent-field="evaluation_evalFamilyGroup_famlReunification"
                data-options="1|3|4|5">{{ form_row(form.evalFamilyGroup.nbPeopleReunification) }}</div>
        </div>
    </div>
    {% if nb_people > 1 %}
        <div class="row mb-3">
            <div class="col-md-12">{{ form_label(form.evalFamilyGroup.commentEvalFamilyGroup) }}</div>
            <div class="col-md-12">{{ form_widget(form.evalFamilyGroup.commentEvalFamilyGroup) }}</div>
        </div>
    {% endif %}
	{{ parent() }}
    
{% endblock %}