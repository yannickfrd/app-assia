{% extends 'app/evaluation/edit/model/_evaluation_accordion.html.twig' %}

{% import 'macros/loopSupportPeople.html.twig' as utils %}

{% block card_title %}Famille{{ parent() }}{% endblock %}

{% block card_body %}

    <div class="row mb-3">
        <div class="col-md-12 accordion" id="accordion_evalFamily">
            {{ utils.loopSupportPeople(accordion_id, evaluation_people, support, theme_color) }}

            {% for key, eval_person in evaluation_people %}
                {% set support_person = eval_person.vars.value.supportPerson %}
                {% set person = support_person.person %}
                {% set prefix_id = 'evaluation_evaluationPeople_' ~ key ~ '_evalFamilyPerson' %}
                <div id="collapse_{{ prefix_id }}" class="collapse {% if loop.first %}shoEvalFw{% endif %} my-3"
                    aria-labelledby="heading_{{ prefix_id }}" data-parent="#accordion_evalFamily">

                    {% if ROLE_CHILD != support_person.role %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.maritalStatus) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix_id }}_maritalStatus" data-options="6">
                                {{ form_row(eval_person.evalFamilyPerson.noConciliationOrder) }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.protectiveMeasure) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix_id }}_protectiveMeasure" data-options="1|3">
                                {{ form_row(eval_person.evalFamilyPerson.protectiveMeasureType) }}</div>
                        </div>
                    {% endif %}

                    {% if GENDER_FEMALE == person.gender and 12 > person.age < 60 %}
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.unbornChild) }}</div>
                            </div>
                            <div class="row" data-parent-field="{{ prefix_id }}_unbornChild" data-options="1">
                                <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.expDateChildbirth) }}</div>
                                <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.pregnancyType) }}</div>
                            </div>
                        </div>
                    {% endif %}
                    
                    {% if ROLE_CHILD == support_person.role %}
                        <div class="row">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.childcareOrSchool) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix_id }}_childcareOrSchool" data-options="1">
                                {{ form_row(eval_person.evalFamilyPerson.childcareSchoolType) }}</div>
                        </div>
                        <div class="row mb-3" id="school_location_{{ key }}" data-parent-field="{{ prefix_id }}_childcareOrSchool" 
                            data-options="1">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.schoolSearch) }}</div>
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.schoolCity) }}</div>
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.schoolZipcode) }}</div>
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.schoolChildCarePrecision) }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.childToHost) }}</div>
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.childDependance) }}</div>
                        </div>
                    {% endif %}
                    {% if nb_children > 0 and (ROLE_CHILD == support_person.role or GENDER_FEMALE == person.gender) %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(eval_person.evalFamilyPerson.pmiFollowUp) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix_id }}_pmiFollowUp"
                                data-options="1">{{ form_row(eval_person.evalFamilyPerson.pmiName) }}</div>
                        </div>
                    {% endif %}
                    <div class="row mb-3">
                        <div class="col-md-12">{{ form_label(eval_person.evalFamilyPerson.commentEvalFamilyPerson) }}</div>
                        <div class="col-md-12">{{ form_widget(eval_person.evalFamilyPerson.commentEvalFamilyPerson) }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <hr/>
    {# {% if nb_children > 0 %}
        <div class="row mb-3">
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.pmiFollowUp) }}</div>
            <div class="col-md-6" data-parent-field="evaluation_evalFamilyGroup_pmiFollowUp"
                data-options="1">{{ form_row(form.evalFamilyGroup.pmiName) }}</div>
        </div>
    {% endif %} #}
    <div class="mb-3">
        <div class="row">
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.childrenBehind) }}</div>
            <div class="col-md-6">{{ form_row(form.evalFamilyGroup.famlReunification) }}</div>
            <div class="col-md-6" data-parent-field="evaluation_evalFamilyGroup_famlReunification"
                data-options="1|3|4|5">{{ form_row(form.evalFamilyGroup.nbPeopleReunification) }}</div>
        </div>
    </div>
    {% if nb_people > 1 %}
        <div class="row mb-3">
            <div class="col-md-12">{{ form_label(form.evalFamilyGroup.commentEvalFamilyGroup) }}</div>
            <div class="col-md-12">{{ form_widget(form.evalFamilyGroup.commentEvalFamilyGroup) }}</div>
        </div>
    {% endif %}
	{{ parent() }}
    
{% endblock %}