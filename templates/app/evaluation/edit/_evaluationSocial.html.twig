{% extends "app/evaluation/edit/model/_evaluationAccordion.html.twig" %}

{% import "macros/loopSupportPeople.html.twig" as utils %}

{% block card_title %}Social - Santé{{ parent() }}{% endblock %}

{% block card_body %}

    <div class="row">
        <div class="col-md-12 accordion" id="accordion-eval_social">
			{{ utils.loopSupportPeople(accordion_id, evaluationPeople, support, theme_color) }}

			{% for key, evalPerson in evaluationPeople %}
                {% set supportPerson = evalPerson.vars.value.supportPerson %}
				{% set prefix = "evaluation_evaluationPeople_" ~ key ~ "_evalSocialPerson" %}
                <div id="collapse-eval_social-{{ key }}" class="collapse {% if loop.first %}show{% endif %} my-3"
                    aria-labelledby="heading-eval_social-{{ key }}" data-parent="#accordion-eval_social" 
                    data-sp-id="{{ supportPerson.id }}">
                    {% if supportPerson.role != ROLE_CHILD %} 
                        <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.rightSocialSecurity) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_rightSocialSecurity" data-options="1|3">
                                {{ form_row(evalPerson.evalSocialPerson.socialSecurity) }}</div>
                        </div>
                        <div class="row" data-parent-field="{{ prefix }}_rightSocialSecurity" data-options="1|3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.endRightsSocialSecurityDate) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.socialSecurityOffice) }}</div>
                        </div>
                        </div>
                    {% endif %}

                    {% set healthProblemsType = constant("App\\Entity\\Evaluation\\EvalSocialPerson::HEALTH_PROBLEMS_TYPE") %}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.healthProblem) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefix }}_healthProblem" data-options="1">
                            <div class="row">
                                <div class="col-form-label col-sm-4">Type de problématiques de santé</div>
                                <div class="col-sm-8">
                                    <select id="{{ key }}_evalSocialPerson_healthProblemType"
                                        name="{{ key }}_evalSocialPerson_healthProblemType" class="form-control">
                                        <option class="default" value="">-- Ajouter --</option>
                                        {% for healthKey, healthValue in healthProblemsType %}
                                            <option value="{{ healthKey }}">{{ healthValue }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <div class="table-responsive" data-parent-field="{{ prefix }}_healthProblem" data-options="1">
                                        <table class="table table-sm table-hover text-dark">
                                            <tbody>
                                                {% for healthKey, healthValue in healthProblemsType %}
                                                    <tr class="d-table-row" data-parent-select="{{ key }}_evalSocialPerson_healthProblemType" 
                                                        data-value="{{ healthKey }}">
                                                        <td scope="row">
                                                            <div class="d-none">
                                                                {{ form_widget(attribute(evalPerson.evalSocialPerson, healthKey)) }}
                                                            </div>
                                                        </td>
                                                        <td class="align-middle">{{ healthValue }}</td>
                                                        <td class="align-middle text-right">
                                                            <button class="btn btn-danger" data-action="remove">
                                                                <span class="fas fa-trash-alt"></span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>		
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6" data-parent-field="{{ prefix }}_healthProblem" data-options="1">
                            {{ form_row(evalPerson.evalSocialPerson.medicalFollowUp) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefix }}_medicalFollowUp" data-options="1">
                            {{ form_row(evalPerson.evalSocialPerson.homeCareSupport) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefix }}_homeCareSupport" data-options="1">
                            {{ form_row(evalPerson.evalSocialPerson.homeCareSupportType) }}</div>
                    </div>
                    <hr class="my-3"/>

                    {% if nb_children > 0 %}
			            {% if SERVICE_TYPE_HOTEL and supportPerson.head %}
                            <div class="row mb-3">
                                <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.infoCrip) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefix }}_infoCrip" data-options="1">
                                    {{ form_row(evalPerson.evalSocialPerson.infoCripDate) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefix }}_infoCrip" data-options="1">
                                    {{ form_row(evalPerson.evalSocialPerson.infoCripByService) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefix }}_infoCrip" data-options="1">
                                    {{ form_row(evalPerson.evalSocialPerson.infoCripComment) }}</div>
                            </div>
                        {% endif %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.aseFollowUp) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_aseFollowUp" data-options="1">
                                {{ form_row(evalPerson.evalSocialPerson.aseMeasureType) }}</div>
                            <div class="col-md-12" data-parent-field="{{ prefix }}_aseFollowUp" data-options="1">
                                {{ form_widget(evalPerson.evalSocialPerson.aseComment) }}</div>
                        </div>
                        <hr class="my-3"/>
                    {% endif %}
                    {% if supportPerson.role != ROLE_CHILD %}
                        <div class="row mb-3">
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.familyBreakdown) }}</div>
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.friendshipBreakdown) }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(evalPerson.evalSocialPerson.violenceVictim) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefix }}_violenceVictim" data-options="1">
                                {{ form_row(evalPerson.evalSocialPerson.domViolenceVictim) }}</div>
                        </div>
                        <hr class="my-3"/>
                    {% endif %}
                    <div class="row mb-3">
                        {{ form_label(evalPerson.evalSocialPerson.commentEvalSocialPerson) }}
                        <div class="col-md-12">
                            {{ form_widget(evalPerson.evalSocialPerson.commentEvalSocialPerson) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <hr>

    <div class="row mb-3">
        <div class="col-md-6"> {{ form_row(form.evalSocialGroup.animal) }}</div>
        <div class="col-md-6" data-parent-field="evaluation_evalSocialGroup_animal"
            data-options="1">{{ form_row(form.evalSocialGroup.animalType) }}</div>
    </div>

    {% if nb_people > 1 %}
        <div class="row mb-3">
            {{ form_label(form.evalSocialGroup.commentEvalSocialGroup) }}
            <div class="col-md-12">
                {{ form_widget(form.evalSocialGroup.commentEvalSocialGroup) }}
            </div>
        </div>
    {% endif %}
    {{ parent() }}
    
{% endblock %}