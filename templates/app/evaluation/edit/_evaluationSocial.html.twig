{% extends "app/evaluation/edit/model/_evaluationAccordion.html.twig" %}

{% import "macros/loopSupportPeople.html.twig" as utils %}

{% block card_title %}Social - Sant√©{{ parent() }}{% endblock %}

{% block card_body %}

    <div class="row">
        <div class="col-md-12 accordion" id="accordion_evalSocial">
			{{ utils.loopSupportPeople(accordion_id, evaluationPeople, support, theme_color) }}

			{% for key, form_eval_person in evaluationPeople %}
                {% set supportPerson = form_eval_person.vars.value.supportPerson %}
                {% set form_eval_social_person = form_eval_person.evalSocialPerson %}
				{% set prefixId = "evaluation_evaluationPeople_" ~ key ~ "_evalSocialPerson" %}
                <div id="collapse_{{ prefixId }}" class="collapse {% if loop.first %}show{% endif %} my-3"
                    aria-labelledby="heading_{{ prefixId }}" data-parent="#accordion_evalSocial">
                    <div class="row mb-3">
                        <div class="col-md-6">{{ form_row(form_eval_social_person.rightSocialSecurity) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefixId }}_rightSocialSecurity" data-options="1|3">
                            {{ form_row(form_eval_social_person.socialSecurity) }}</div>
                    </div>
                    <div class="row" data-parent-field="{{ prefixId }}_rightSocialSecurity" data-options="1|3">
                        <div class="col-md-6">{{ form_row(form_eval_social_person.endRightsSocialSecurityDate) }}</div>
                        <div class="col-md-6">{{ form_row(form_eval_social_person.socialSecurityOffice) }}</div>
                    </div>

                    {% set healthProblemsType = constant("App\\Entity\\Evaluation\\EvalSocialPerson::HEALTH_PROBLEMS_TYPE") %}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">{{ form_row(form_eval_social_person.healthProblem) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefixId }}_healthProblem" data-options="1">
                            <div class="row">
                                <div class="col-md-12">{{ form_row(form_eval_social_person.healthProblemType) }}</div>
                                <div class="col-md-12">
                                    <div class="table-responsive" data-parent-field="{{ prefixId }}_healthProblem" data-options="1">
                                        <table class="table table-sm table-hover text-dark">
                                            <tbody>
                                                {% for healthKey, healthValue in healthProblemsType %}
                                                    <tr data-parent-select="{{ prefixId }}_healthProblemType" data-value="{{ healthKey }}">
                                                        <td scope="row">{{ form_widget(attribute(form_eval_social_person, healthKey)) }}</td>
                                                        <td class="align-middle">{{ healthValue }}</td>
                                                        <td class="align-middle text-right">
                                                            <button class="btn btn-danger" data-action="remove">
                                                                <span class="fas fa-trash-alt"></span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>		
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6" data-parent-field="{{ prefixId }}_healthProblem" data-options="1">
                            {{ form_row(form_eval_social_person.medicalFollowUp) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefixId }}_medicalFollowUp" data-options="1">
                            {{ form_row(form_eval_social_person.homeCareSupport) }}</div>
                        <div class="col-md-6" data-parent-field="{{ prefixId }}_homeCareSupport" data-options="1">
                            {{ form_row(form_eval_social_person.homeCareSupportType) }}</div>
                    </div>
                    <hr class="my-3"/>

                    {% if nb_children > 0 %}
			            {% if SERVICE_TYPE_HOTEL and supportPerson.head %}
                            <div class="row mb-3">
                                <div class="col-md-6">{{ form_row(form_eval_social_person.infoCrip) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefixId }}_infoCrip" data-options="1">
                                    {{ form_row(form_eval_social_person.infoCripDate) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefixId }}_infoCrip" data-options="1">
                                    {{ form_row(form_eval_social_person.infoCripByService) }}</div>
                                <div class="col-md-6" data-parent-field="{{ prefixId }}_infoCrip" data-options="1">
                                    {{ form_row(form_eval_social_person.infoCripComment) }}</div>
                            </div>
                        {% endif %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(form_eval_social_person.aseFollowUp) }}</div>
                            <div class="col-md-6" data-parent-field="{{ prefixId }}_aseFollowUp" data-options="1">
                                {{ form_row(form_eval_social_person.aseMeasureType) }}</div>
                            <div class="col-md-12" data-parent-field="{{ prefixId }}_aseFollowUp" data-options="1">
                                {{ form_widget(form_eval_social_person.aseComment) }}</div>
                        </div>
                        <hr class="my-3"/>
                    {% endif %}
                    {% if ROLE_CHILD != supportPerson.role %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(form_eval_social_person.familyBreakdown) }}</div>
                            <div class="col-md-6">{{ form_row(form_eval_social_person.friendshipBreakdown) }}</div>
                        </div>
                    {% endif %}
                        <div class="row mb-3">
                            <div class="col-md-6">{{ form_row(form_eval_social_person.violenceVictim) }}</div>
                            {% if ROLE_CHILD != supportPerson.role %}
                                <div class="col-md-6" data-parent-field="{{ prefixId }}_violenceVictim" data-options="1">
                                    {{ form_row(form_eval_social_person.domViolenceVictim) }}</div>
                            {% endif %}
                        </div>
                        <hr class="my-3"/>
                    <div class="row mb-3">
                        {{ form_label(form_eval_social_person.commentEvalSocialPerson) }}
                        <div class="col-md-12">
                            {{ form_widget(form_eval_social_person.commentEvalSocialPerson) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <hr>

    <div class="row mb-3">
        <div class="col-md-6"> {{ form_row(form.evalSocialGroup.animal) }}</div>
        <div class="col-md-6" data-parent-field="evaluation_evalSocialGroup_animal"
            data-options="1">{{ form_row(form.evalSocialGroup.animalType) }}</div>
    </div>

    {% if nb_people > 1 %}
        <div class="row mb-3">
            {{ form_label(form.evalSocialGroup.commentEvalSocialGroup) }}
            <div class="col-md-12">
                {{ form_widget(form.evalSocialGroup.commentEvalSocialGroup) }}
            </div>
        </div>
    {% endif %}
    {{ parent() }}
    
{% endblock %}