{# Charges #}
{% set charges = constant("App\\Entity\\Evaluation\\EvalBudgetPerson::CHARGES_TYPE") %}

<div class="col-md-6">
    <div class="row mb-3">
        <div class="col-md-12">{{ form_row(evalBudgetPerson.charges) }}</div>
        <div class="col-md-12" data-parent-field="{{ prefix }}_charges" data-options="1">
            <div class="row">
                <div class="col-form-label col-sm-4">Type de charges</div>
                <div class="col-sm-8">
                    <select id="{{ key }}_{{ entity }}_chargesType"
                        name="{{ key }}_{{ entity }}_chargesType" class="form-control"
                        data-type="charges" data-sp-id="{{ support_person_id }}">
                        <option class="default" value="">-- Ajouter --</option>
                        {% for chargeKey, chargeValue in charges %}
                            <option value="{{ chargeKey }}">{{ chargeValue }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-3">
            <div class="table-responsive" data-parent-field="{{ prefix }}_charges"  data-options="1">
                <table class="table table-sm table-hover text-dark">
                    <thead>
                        <tr>
                            <th scope="col" class="align-middle th-w-20"></th>
                            <th scope="col" class="align-middle th-w-140">Type de charges</th>
                            <th scope="col" class="align-middle th-w-150">Montant</th>
                            <th scope="col" class="align-middle th-w-20"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for chargeKey, chargeValue in charges %}
                        <tr class="d-table-row" data-parent-select="{{ key }}_{{ entity }}_chargesType" 
                            data-value="{{ chargeKey }}">
                            <td scope="row">
                                <div class="d-none">{{ form_widget(attribute(evalBudgetPerson, chargeKey)) }}</div>
                            </td>
                            <td class="align-middle">{{ not loop.last ? chargeValue : 
                                form_widget(evalBudgetPerson.chargeOtherPrecision) }}
                            </td>
                            <td>{{ form_widget(attribute(evalBudgetPerson, chargeKey ~ "Amt")) }}</td>
                            <td class="align-middle">
                                <button class="btn btn-danger" data-action="remove"><!--
                                --><span class="fas fa-trash-alt"></span>
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr class="font-weight-bold">
                            <td scope="row"></td>
                            <td class="align-middle">Total des charges</td>
                            <td class="align-middle">{{ form_widget(evalBudgetPerson.chargesAmt) }}</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>