{% extends 'model/_accordion.html.twig' %}

{% block accordion_extra_header %}
	<span class="position-absolute top-0 start-100 translate-middle 
		badge rounded-pill text-bg-warning fade-out ms-3 small" 
		data-bs-toggle="tooltip" data-bs-placement="bottom" 
		title="Nombre d'informations importantes non-renseignées dans le bloc"></span>	
{% endblock %}

{% block accordion_body %}
	<div class="row">
		<div class="col-md-12">
			<div class="float-end">
				<button class="btn btn-sm btn-secondary shadow" type="button" data-bs-toggle="collapse" 
					data-bs-target="#accordion_item_collapse_{{ accordion_id }}" aria-expanded="false" 
					aria-controls="accordion_item_collapse_{{ accordion_id }}">
					<i class="fas fa-compress-alt me-1"></i>Réduire
				</button>
				<button type="submit" class="btn btn-sm btn-primary shadow" title="Sauvegarder l'évaluation sociale">
					<i class="fas fa-save me-2"></i>Enregistrer
				</button>
			</div>
		</div>
	</div>	
{% endblock %}