{% extends "base.html.twig" %}

{% block title %}{{ form.vars.value.fullname }}{% endblock %}



{% block body %}

    <div class="container">

        <section>

            {% include "model/_msgFlash.html.twig" %}
            <h1 class="h2 mb-3">{{ form.vars.value.fullname }}</h1>

            {{ form_start(form) }}
            
            <hr>
            <div class="row">
                <div class="col-md-6">{{ form_row(form.firstname) }}</div>
                <div class="col-md-6">{{ form_row(form.lastname) }}</div>
                <div class="col-md-6">{{ form_row(form.email) }}</div>
                <div class="col-md-6">{{ form_row(form.username) }}</div>
                <div class="col-md-6">{{ form_row(form.status) }}</div>
                <div class="col-md-6">{{ form_row(form.roles) }}</div>
            </div>

            <hr>

            <h2 class="h4 mb-4">Services rattach√©s</h2>
            <div id="serviceUser-fields-list" 
                data-prototype="<td class='align-middle'>{{ form_widget(form.serviceUser.vars.prototype.service)|e }}</td>"
                data-widget-tags="<tr></tr>" data-widget-counter="{{ form.serviceUser|length }}">
                <div class="table-responsive">
                    <table id="function-table" class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="align-middle th-w-150">Service</th>
                                <th scope="col" class="align-middle th-w-20"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for role in form.serviceUser %}
                            <tr id="{{ role.vars.id }}">
                                <td>{{ form_widget(role.service) }}</td>
                                <td class="align-middle">
                                    <button class="btn btn-danger" data-action="remove"><span class="fas fa-trash-alt"></span></button>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="my-2">
                <button type="button" class="add-another-collection-widget btn btn-{{ theme_color }}"
                    data-list-selector="#serviceUser-fields-list"><span class="fas fa-plus-square mr-2"></span>Ajouter un
                    service</button>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="float-right mb-2">
                        <button type="submit" class="btn btn-{{ theme_color }} shadow"><span class="fas fa-save mr-2"></span>Enregistrer</button>
                    </div>
                </div>
            </div>

            {{ form_row(form._token) }}
            {{ form_end(form, {"render_rest": false}) }}

        </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags("registration") }}
{% endblock %}