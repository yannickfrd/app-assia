<div id="accordion_search">
    {{ form_start(form) }}
    <div class="row mb-3">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="col-md-6">{{ form_row(form.service.poles, {attr: {class: 'w-100'}}) }}</div>
        {% endif %}
        <div class="col-md-6">{{ form_row(form.service.services, {attr: {class: 'w-100'}}) }}</div>
        <div class="col-md-6">{{ form_row(form.service.subServices, {attr: {class: 'w-100'}}) }}</div>
        <div class="col-md-6">{{ form_row(form.service.devices, {attr: {class: 'w-100'}}) }}</div>
        <div class="col-md-6">{{ form_row(form.service.referents, {attr: {class: 'w-100'}}) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">{{ form_row(form.status, {attr: {class: 'w-100'}}) }}</div>
        <div class="col-md-6">{{ form_row(form.supportDates) }}</div>
        <div class="col-md-6">{{ form_row(form.date.start) }}</div>
        <div class="col-md-6">{{ form_row(form.date.end) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">{{ form_row(form.familyTypologies) }}</div>
            <div class="col-md-6">
            <div class="form-check"
                data-bs-toggle="tooltip" data-bs-placement="bottom" title="Demandeur/euse principal·e">{{ form_row(form.head) }}
            </div>
        </div>
    </div>

    <div class="row mt-5 bg-light">
        <div class="col-md-6">{{ form_row(form.model, {
            'attr': {'data-no-reset': 'true'} }) }}
        </div>
        <div class="col-md-3">
            <div class="form-check"
                title="Un tableur non formaté utilise moins de mémoire et permet donc de faire des exports plus importants"
                data-bs-toggle="tooltip" data-bs-placement="bottom" >
                {{ form_widget(form.formattedSheet, {attr: {'data-no-reset': 'true'} }) }}
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-check"
                title="Anonymiser l'export (nom, prénom et date de naissance)"
                data-bs-toggle="tooltip" data-bs-placement="bottom" >
                    {{ form_widget(form.anonymized, {attr: {'data-no-reset': 'true'} }) }}
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="float-start d-flex">
                <p id="results"></p>
            </div>
            <div class="mb-4 float-end">
                <button type="reset" id="reset" name="reset" class="btn btn-secondary ms-2 shadow" data-bs-toggle="tooltip" data-bs-placement="bottom"
                    title="Effacer les filtres"><i class="fas fa-eraser"></i><span class="visually-hidden">Effacer</span>
                </button>
                <button type="submit" id="count" name="count" data-path="{{ path('export_count') }}" 
                    class="btn btn-primary shadow">Calculer</button>
                <button type="submit" id="export" name="export" data-path="{{ path('export_new') }}" 
                    class="btn btn-primary shadow">Exporter</button>
            </div>
        </div>
    </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>