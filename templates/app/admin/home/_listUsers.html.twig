 {% extends "model/_accordion.html.twig" %}

 {% block card_title %}Indicateurs par travailleur social{% endblock %}

 {% block card_body %}

 <div class="row">
     <div class="col-md-6 table-responsive">
         <table id="table-notes" class="table table-striped table-hover text-dark">
             <thead>
                 <tr>
                     <th scope="row" class="align-middle th-w-150">Travailleur social</th>
                     <th class="align-middle text-right th-w-100">Nb de suivis en cours</th>
                     <th class="align-middle text-right th-w-100">Nb de notes</th>
                     <th class="align-middle text-right th-w-100">Nb de rendez-vous</th>
                     <th class="align-middle text-right th-w-100">Nb de documents</th>
                     <th class="align-middle text-right th-w-100">Nb de paiements</th>
                 </tr>
             </thead>
             <tbody>
                 {% for user in users %}
                 <tr>
                     <td scope="row" class="align-middle text-center">{{ user["name"] }}</td>
                     <td class="align-middle text-right">{{ user["activeSupports"] }}</td>
                     <td class="align-middle text-right">{{ user["notes"] }}</td>
                     <td class="align-middle text-right">{{ user["rdvs"] }}</td>
                     <td class="align-middle text-right">{{ user["documents"] }}</td>
                     <td class="align-middle text-right">{{ user["payments"] }}</td>
                 </tr>
                 {% endfor %}
             </tbody>
         </table>
     </div>
 </div>

 {% endblock %}