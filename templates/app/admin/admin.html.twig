{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="h2 mb-3">Administration</h1>

        {% include "model/_msgFlash.html.twig" %}

        <hr>

        <div class="row my-4">
            <div class="col-md-6">
                <h2 class="h5">Utilisateurs</h2>
                <ul>
                    <li class="mb-2 text-{{ theme_color }}">
                        <a class="text-dark" href="{{ path("security_registration") }}">Créer un compte</a>
                    </li>
                    <li class="mb-2 text-{{ theme_color }}">
                        <a class="text-dark" href="{{ path("admin_users") }}">Gérer les comptes</a>
                    </li>
                </ul>

                <hr class="my-3">

                <h2 class="h5">Organismes prescripteurs</h2>
                <ul>
                    <li class="mb-2 text-{{ theme_color }}">
                        <a class="text-dark" href="{{ path("admin_organization_new") }}">Créer un organisme prescripteur</a>
                    </li>
                    <li class="mb-2 text-{{ theme_color }}">
                        <a class="text-dark" href="{{ path("organizations") }}">Gérer les organismes prescripteurs</a>
                    </li>
                </ul>


                {% if is_granted("ROLE_SUPER_ADMIN") %}
                
                    <hr class="my-3">

                    <h2 class="h5">Services, pôles et dispositifs</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("service_new") }}">Créer un service</a>
                        </li>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("pole_new") }}">Créer un pôle</a>
                        </li>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("admin_device_new") }}">Créer un dispositif</a>
                        </li class="mb-2">
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("admin_devices") }}">Gérer les dispositifs</a>
                        </li>
                    </ul>

                    <hr class="my-3">

                    <h2 class="h5">Documents</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("documents") }}">Rechercher des documents</a>
                        </li>
                    </ul>

                {% endif %}

                <hr class="my-3">

            </div>

            <div class="col-md-6">

                <h2 class="h5">Export</h2>
                <ul>
                    <li class="mb-2 text-{{ theme_color }}">
                        <a class="text-dark" href="{{ path("export") }}">Exporter les données</a>
                    </li>
                </ul>
                
                <hr class="my-3">

                {% if app.user.id == 1 %}


                    <h2 class="h5">Cache</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("cache_clear") }}">Vider le cache</a>
                        </li>
                    </ul>

                    <hr class="my-3">

                    <h2 class="h5">Base de données</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("database_backups") }}">Sauvegarder et exporter la base de données</a>
                        </li>   
                    </ul>

                    <hr class="my-3">

                    <h2 class="h5">Indicateurs</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("indicators_social") }}">Indicateurs sociaux</a>
                        </li>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path('daily_indicators') }}">Indicateurs quotidiens d'activité</a>
                        </li>
                    </ul>

                    <hr class="my-3">

                    <h2 class="h5">Doublons</h2>
                    <ul>
                        <li class="mb-2 text-{{ theme_color }}">
                            <a class="text-dark" href="{{ path("duplicated_people") }}">Rechercher les personnes en doublon</a>
                        </li>
                    </ul>

                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock javascripts %}