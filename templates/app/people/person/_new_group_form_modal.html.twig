{% set modal_id = 'modal-new-group' %}

{% extends 'model/_modal_dialog.html.twig' %}

{% block modal_title %}Nouveau groupe{% endblock %}

{% block modal_body_and_footer %}
    {{ form_start(form_new_group) }}

    <div class="modal-body">
        {{ form_row(form_new_group.peopleGroup.familyTypology) }}
        {{ form_row(form_new_group.peopleGroup.nbPeople) }}
        {{ form_row(form_new_group.role) }}
    </div>

    <div class="modal-footer d-flex justify-content-between">
        {% block modal_footer %}
        <div class="float-start">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        </div>
        <div class="float-end">
            <button type="submit" id="js-btn-confirm" class="btn btn-{{ theme_color }}">Cr√©er le nouveau groupe</button>
        </div>
        {% endblock %}
    </div>

    {{ form_row(form_new_group._token) }}
    {{ form_end(form_new_group, {'render_rest': false}) }}
{% endblock %}
