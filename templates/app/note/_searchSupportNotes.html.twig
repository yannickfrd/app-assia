{% extends "model/_supportSearch.html.twig" %}

{% form_theme form_search "bootstrap_4_layout.html.twig" %}

{% block search_form %}
    <div class="form-group col-auto my-1 px-1">{{ form_row(form_search.content) }}</div>
    <div class="form-group col-auto my-1 px-1">{{ form_row(form_search.status) }}</div>
    <div class="form-group col-auto my-1 px-1">{{ form_row(form_search.type) }}</div>
    <div class="form-group col-auto my-1 px-1">
        <div class="d-flex input-group">
            <div class="input-group-prepend">
                <div class="input-group-text" title="Ã‰tiquettes"
                    data-toggle="tooltip" data-placement="bottom">
                    <span class="fas fa-tag text-black-50"></span>
                </div>
            </div>
            <div class="flex-fill pl-0">
                {{ form_row(form_search.tags) }}
            </div>
        </div>    
    </div>
{% endblock %}

{% block form_search_export %}
    <button id="js-btn-export" name="export" value="true" class="btn btn-primary ml-2 shadow"
        data-toggle="tooltip" data-placement="bottom" title=" Exporter les notes dans un document Word"><span
        class="fas fa-file-word"></span><span class="sr-only">Exporter</span>
    </button>
{% endblock %}
