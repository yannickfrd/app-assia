{% extends 'model/_search.html.twig' %}

{% block search_form %}
    <div class="col-auto my-1 px-1">{{ form_widget(form.content) }}</div>
    <div class="col-auto my-1 px-1">
        <div class="input-group">
            <span class="input-group-text" title="Étiquettes" data-bs-toggle="tooltip" data-bs-placement="bottom">
                <i class="fas fa-tag text-black-50"></i>
            </span>
            {{ form_widget(form.tags) }}
        </div>
    </div>
    {% include '_shared/_service_device_referent_search.html.twig' %}
    <div class="col-auto my-1 px-1">{{ form_widget(form.fullname) }}</div>
    <div class="col-auto my-1 px-1">{{ form_widget(form.type) }}</div>
    <div class="col-auto my-1 px-1">{{ form_widget(form.status) }}</div>
    <div class="col-auto my-1 px-1 d-inline-flex" title="Date de début" data-bs-toggle="tooltip" data-bs-placement="bottom">
        <span class="my-2 px-1">Entre</span>{{ form_widget(form.date.start) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" title="Date de fin" data-bs-toggle="tooltip" data-bs-placement="bottom">
        <span class="my-2 pe-1">et</span>{{ form_widget(form.date.end) }}
    </div>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-auto my-1 px-1">{{ form_widget(form.id) }}</div>
    {% endif %}
{% endblock %}