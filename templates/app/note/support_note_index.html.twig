{% extends 'base.html.twig' %}

{% set nb_notes = notes|length %}
{% set restoration_mode = form_search.deleted.deleted.vars.checked and is_granted('ROLE_SUPER_ADMIN') %}
{% set title = 'Notes sociales' ~ (restoration_mode ? ' (Corbeille)') %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container" data-view="card-table" data-is-card="{{ is_card_view }}">

        {% include 'app/support/_partials/_support_nav.html.twig' %}

        <div class="row mb-2">
            <div class="col-md-12">
                {% if is_card_view %}
                    <a href="{{ path('support_note_index_table', {'id': support.id}) }}" id="table-view" class="btn btn-{{ theme_color }} shadow me-1"
                        role="button" data-toggle="tooltip" title="Passer en vue liste"><i class="far fa-list-alt"></i></a>
                {% else %}
                    <a href="{{ path('support_note_index', {'id': support.id}) }}" id="card-view" class="btn btn-{{ theme_color }} shadow me-1"
                        role="button" data-toggle="tooltip" title="Passer en vue carte"><i class="fa-solid fa-grip-vertical"></i></a>
                {% endif %}
                {% if not restoration_mode %}
                    <button class="btn btn-{{ theme_color }} shadow me-2" data-action="new_note"
                        title="CrÃ©er une nouvelle note" data-toggle="tooltip" data-placement="bottom">
                        <i class="fas fa-plus-square me-2"></i>Nouvelle note
                    </button>
				{% else %}
					<a href="{{ app.request.pathInfo }}" class="btn btn-{{ theme_color }} btn-sm shadow me-2" 
                        id="return_index"><i class="fa-solid fa-arrow-rotate-left me-2"></i>Retour
					</a>
				{% endif %}
                <div class="d-inline align-middle">Total :
                    <span id="count-notes" data-nb-total-notes="{{ nb_total_notes }}">
					{{ nb_notes }} note{% if nb_notes > 1 %}s{% endif %}
                        {{ nb_total_notes and form_search.deleted.deleted.vars.checked != true ? ' sur ' ~ nb_total_notes }}</span>
                </div>
            </div>
        </div>

        {% include 'app/note/_support_note_search_form.html.twig' %}

        {% if is_card_view %}
            {% include 'app/note/_note_card.html.twig' %}
        {% else %}
            {% include 'app/note/_note_table.html.twig' %}
        {% endif %}
    </div>

    {% include 'app/note/_note_form_modal.html.twig' %}
    {% include 'model/_confirm_modal.html.twig' %}
    {% include 'app/note/_note_delete_modal.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('search') }}
    {{ encore_entry_script_tags('note') }}
{% endblock javascripts %}
