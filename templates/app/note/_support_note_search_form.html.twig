{% extends 'model/_support_search_form.html.twig' %}

{% block search_form %}
    <div class="col-auto my-1 px-1">{{ form_widget(form_search.content) }}</div>
    <div class="col-auto my-1 px-1">{{ form_widget(form_search.type) }}</div>
    <div class="col-auto my-1 px-1">{{ form_widget(form_search.status) }}</div>
    <div class="col-auto my-1 px-1">
        <div class="input-group">
            <span class="input-group-text" title="Ã‰tiquettes" data-bs-toggle="tooltip" data-bs-placement="bottom">
                <i class="fas fa-tag text-black-50"></i></span>
