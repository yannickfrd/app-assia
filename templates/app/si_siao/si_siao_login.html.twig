{% extends 'base.html.twig' %}

{% set title = 'Connexion au SI-SIAO' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="container">
        <section class="row min-vh-80">
            <div class="form-signin m-auto text-center">

                {{ form_start(form) }}

                {% include 'model/_flash_message.html.twig' %}

                <h1 class="h3 mb-4 font-weight-normal">{{ title }}</h1>

                {% include 'app/si_siao/_si_siao_login_form.html.twig' with {'siSiaoLoginForm': form} %}

                <button type="submit" id="send" name="send" class="btn btn-lg btn-{{ theme_color }} btn-block shadow mb-2">Se connecter au SI-SIAO</button>
                
                {{ form_row(form._token) }}
                {{ form_end(form) }}

                <a href="{{ target_path }}" class="btn btn-lg btn-secondary btn-block shadow mb-4">Annuler</button>
                <a href="https://sisiao.social.gouv.fr" target="_blank" class="text-{{ theme_color }} mb-4">Mot de passe SI-SIAO oubli√© ?</a>
            
            </div>
        </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}