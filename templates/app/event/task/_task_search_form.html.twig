{% extends 'model/_search.html.twig' %}

{% block search_form %}
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Recherche">{{ form_widget(form.title) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Date de début"><span class="my-2 px-1">Entre</span>{{ form_widget(form.date.start) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Date de fin"><span class="my-2 pr-1">et</span>{{ form_widget(form.date.end) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Statut">{{ form_widget(form.status) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Priorité">{{ form_widget(form.level) }}
    </div>
    <div class="col-auto my-1 px-1">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text" title="Étiquettes" data-toggle="tooltip" data-placement="bottom">
                    <i class="fas fa-tag text-black-50"></i>
                </div>
            </div>
            {{ form_widget(form.tags, {attr: {class: 'w-min-200' }}) }}
        </div>
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Professionnel·le(s) concerné·e(s)">{{ form_widget(form.users) }}
    </div>
    <div class="col-auto my-1 px-1 d-inline-flex" data-toggle="tooltip" data-placement="bottom"
        title="Nom du suivi">{{ form_widget(form.fullname) }}
    </div>
    {% include '_shared/_serviceDeviceReferentSearch.html.twig' %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-auto my-1 px-1">{{ form_widget(form.id) }}</div>
    {% endif %}
{% endblock %}