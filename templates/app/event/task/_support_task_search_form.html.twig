{% extends 'model/_support_search_form.html.twig' %}

{% block search_form %}
    <div class="col-auto my-1 px-1" title="Recherche" 
        data-bs-toggle="tooltip" data-bs-placement="bottom">{{ form_widget(form_search.title) }}
    </div>
    <div class="col-auto my-1 px-1" title="Statut" 
        data-bs-toggle="tooltip" data-bs-placement="bottom">{{ form_widget(form_search.status) }}
    </div>
    <div class="col-auto my-1 px-1" title="Priorité" 
        data-bs-toggle="tooltip" data-bs-placement="bottom">{{ form_widget(form_search.level) }}
    </div>
    <div class="col-auto my-1 px-1">
        <div class="input-group">
            <span class="input-group-text" title="Étiquettes" data-bs-toggle="tooltip" data-bs-placement="bottom">
                <i class="fas fa-tag text-black-50"></i>
            </span>
            {{ form_widget(form_search.tags) }}
        </div>
    </div>
{% endblock %}