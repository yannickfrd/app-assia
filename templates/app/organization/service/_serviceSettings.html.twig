{% extends 'model/_accordion.html.twig' %}

{% block card_title %}Paramètres{% endblock %}

{% block card_body %}

    <div class="row">
        <div class="col-md-12"><h2 class="h6 mb-3">Archivage et purge de données</h2></div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">{{ form_row(form.setting.softDeletionDelay) }}</div>
        <div class="col-md-6">{{ form_row(form.setting.hardDeletionDelay) }}</div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12"><h2 class="h6 mb-3">Rappels</h2></div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 custom-control custom-checkbox custom-checkbox-{{ theme_color }} pl-0">{{ form_row(form.setting.weeklyAlert) }}</div>
        <div class="col-md-6 custom-control custom-checkbox custom-checkbox-{{ theme_color }} pl-0">{{ form_row(form.setting.dailyAlert) }}</div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="float-right mb-2">
                <button type="submit" class="btn btn-{{ theme_color }} shadow"><i class="fas fa-save mr-2"></i>Enregistrer</button>
            </div>
        </div>
    </div>

{% endblock %}