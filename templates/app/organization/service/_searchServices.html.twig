{% extends "model/_search.html.twig" %}

{% block search_form %}

    <div class="form-group col-auto my-1 px-1">{{ form_row(form.name) }}</div>
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.pole) }}</div>
    <div class="form-group col-auto my-1 px-1 d-inline-flex">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text d-none d-sm-block" title="Téléphone" data-toggle="tooltip"
                    data-placement="bottom" ><i class=" fas fa-phone text-black-50"></i>
                </div>
            </div>
            {{ form_row(form.phone) }}
        </div>
    </div>
    <div class="form-group col-auto my-1 px-1">{{ form_row(form.city) }}</div>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="form-group col-auto my-1 px-1">{{ form_row(form.disabled) }}</div>
    {% endif %}

{% endblock %}