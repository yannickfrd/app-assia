<section>
    {% include 'model/_msgFlash.html.twig' %}
    {{ form_start(form_password) }}
    <h2 class="h4 my-4">Modification du mot de passe</h2>
    <div class="row mb-3 mb-2">
        <div class="col-md-6">
            <div class="row mb-3">
                {{ form_label(form_password.oldPassword) }}
                <div class="col-8">
                    <div class="input-group js-password-group">
                        {{ form_widget(form_password.oldPassword) }}
                        <div class="input-group-append">
                            <span class="input-group-text"><span
                                    class="fa fa-eye js-show-password"></span></span>
                        </div>{{ form_help(form_password.oldPassword) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3 mb-2">
        <div class="col-md-6">
            <div class="row mb-3">
                {{ form_label(form_password.newPassword) }}
                <div class="col-8">
                    <div class="input-group js-password-group">
                        {{ form_widget(form_password.newPassword) }}
                        <div class="input-group-append">
                            <span class="input-group-text"><span
                                    class="fa fa-eye js-show-password"></span></span>
                        </div>{{ form_help(form_password.newPassword) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row mb-3">
                {{ form_label(form_password.confirmNewPassword) }}
                <div class="col-8">
                    <div class="input-group js-password-group">
                        {{ form_widget(form_password.confirmNewPassword) }}
                        <div class="input-group-append">
                            <span class="input-group-text"><span
                                    class="fa fa-eye js-show-password"></span></span>
                        </div>{{ form_help(form_password.confirmNewPassword) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="mb-4 float-right">
                <button type="submit" id="send2" name="send2" class="btn btn-{{ theme_color }} shadow">Mettre Ã  jour</button>
            </div>
        </div>
    </div>

    {{ form_row(form_password._token) }}
    {{ form_end(form_password) }}
</section>