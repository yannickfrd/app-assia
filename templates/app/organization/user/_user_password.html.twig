                        {{ form_widget(form_password.confirmNewPassword) }}
                        <span class="input-group-text"><i class="fa fa-eye js-show-password"></i></span>
                        {{ form_help(form_password.confirmNewPassword) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="mb-4 float-end">
                <button type="submit" id="send2" name="send2" class="btn btn-primary shadow">Mettre Ã  jour</button>
            </div>
        </div>
    </div>

    {{ form_row(form_password._token) }}
    {{ form_end(form_password) }}
</section>