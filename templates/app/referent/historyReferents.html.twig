<section id="referents">
    <div class="d-flex align-items-center mb-3">
        <h2 class="h4">Autre service ou référent social</h2>
        <span class="ml-2 d-none d-md-inline small primary"> (SSD, CCAS, service médico-social...)</span>
    </div>
    {% if referents|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th class="align-middle th-w-150">{{ "referent.name"|trans({}, "forms") }}</th>
                        <th class="align-middle th-w-150">{{ "referent.type"|trans({}, "forms") }}</th>
                        <th class="align-middle th-w-100">{{ "referent.socialWorker"|trans({}, "forms") }}</th>
                        <th class="align-middle th-w-100">{{ "Email"|trans({}, "forms") }}</th>
                        <th class="align-middle th-w-100">{{ "Phone"|trans({}, "forms") }}</th>
                        <th class="align-middle th-w-150">{{ "City"|trans({}, "forms") }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for referent in referents|reverse %}
                        <tr>
                            <td scope="row">
                                <a href="{{  support is defined ? path('support_referent_edit', {'support_id': support.id, 'id':referent.id}) : 
                                    path('group_referent_edit', {'id':referent.id}) }}"
                                    class="btn btn-{{ theme_color }} btn-sm shadow my-1" data-toggle="tooltip" data-placement="bottom"
                                    title="Voir le service social accompagnateur"><span class="fas fa-eye"></span>
                                </a>
                            </td>
                            <td class="align-middle">{{ referent.name }}</td>
                            <td class="align-middle">{{ referent.typeToString }}</td>
                            <td class="align-middle">{{ referent.socialWorker }}<br/>{{ referent.socialWorker2 }}</td>
                            <td class="align-middle">
                                <a href="mailto:{{ referent.email }}" class="text-{{ theme_color }}">{{ referent.email }}</a><br/>
                                <a href="mailto:{{ referent.email2 }}" class="text-{{ theme_color }}">{{ referent.email2 }}</a>
                            </td>
                            <td class="align-middle">{{ referent.phone1 }}<br/>{{ referent.phone2 }}</td>
                            <td class="align-middle">{{ referent.city }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
    <a href="{{ support is defined ? path('support_referent_new', {'support_id':support.id}) : path('group_referent_new', {'group_id':group_people.id}) }}" 
        class="m-2 btn btn-{{ theme_color }} btn-sm"><span class="fas fa-plus-square mr-2"></span>Ajouter un service ou référent</a>
</section>