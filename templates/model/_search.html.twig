{% form_theme form 'bootstrap_5_layout.html.twig' %}

<div class="container-fluid p-0 bg-gray-light">
    <div class="accordion" id="accordion_search">
        <h2 class="accordion-header d-block d-sm-none" id="heading_search">
            <button class="accordion-button py-2 bg-gray-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_search" 
                aria-expanded="true" aria-controls="collapse_search"><span class="h5">Filtres</span>
            </button>
        </h2>
        <div id="collapse_search" class="accordion-collapse collapse show" 
            aria-labelledby="heading_search" data-bs-parent="#accordion_search">
            <div class="accordion-body">
                {{ form_start(form) }}
                <div class="row row-cols-lg-auto justify-content-center align-items-center">
                    {% block search_form %}{% endblock %}
                    <div class="col-auto my-1 px-1">
                        {% block search_form_buttons %}
                            <button type="submit" id="search" class="btn btn-primary shadow" data-bs-toggle="tooltip"
                                data-bs-placement="bottom" title="Rechercher">
                                <i class="fas fa-search"></i><span class="visually-hidden">Rechercher</span>
                            </button>
                            <button type="reset" class="btn btn-secondary ms-2 shadow" data-bs-placement="bottom" data-bs-toggle="tooltip"
                                title="Effacer les filtres">
                                <i class="fas fa-eraser"></i><span class="visually-hidden">Effacer</span></button>
                            {% if form.export is defined %}
                                <button id="js-btn-export" name="export" value="true" class="btn btn-success ms-2 shadow" data-bs-toggle="tooltip"
                                    data-bs-placement="bottom" title="Exporter les donnÃ©es sur Excel">
                                    <i class="fas fa-file-excel"></i><span class="visually-hidden">Exporter</span>
                                </button>
                            {% endif %}
                        {% endblock %}
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
</div>