{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="container-fluid p-0">
    <div class="accordion" id="accordionSearch">
        <div id="form-search" class="bg-light-gray mb-0 p-3">
            <div role="button" class="collapsed cursor-pointer d-block d-sm-none" id="headingSearch" data-toggle="collapse"
                data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch">
                <h2 class="h5">Recherche<span class="float-right"><span class="fa fa-chevron-down"></span></span></h2>
            </div>
            <div id="collapseSearch" class="collapse show" aria-labelledby="headingSearch"
                data-parent="#accordionSearch">

                {{ form_start(form) }}
                
                <div class="form-inline justify-content-sm-center align-items-end">
                    {% block search_form %}{% endblock %}
                    <div class="col-auto my-1 px-1">
                        {% block search_form_buttons %}
                            <button type="submit" id="search" class="btn btn-{{ theme_color }} shadow" data-toggle="tooltip"
                                data-placement="bottom" title="Rechercher"><span class="fas fa-search"></span><span
                                    class="sr-only">Rechercher</span></button>
                            <button type="reset" class="btn btn-secondary ml-2 shadow" data-placement="bottom" data-toggle="tooltip"
                                title="Effacer les filtres"><span class="fas fa-eraser"></span><span
                                    class="sr-only">Effacer</span></button>
                            {% if form.export is defined %}
                                <button id="js-btn-export" name="export" value="true" class="btn btn-success ml-2 shadow" data-toggle="tooltip"
                                    data-placement="bottom" title="Exporter les donnÃ©es sur Excel"><span
                                    class="fas fa-file-excel"></span><span class="sr-only">Exporter</span></button>
                            {% endif %}
                        {% endblock %}
                    </div>
                </div>

                {{ form_end(form, {'render_rest': false}) }}

            </div>
        </div>
    </div>
</div>