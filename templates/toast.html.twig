<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" autohide="false">
    <div class="toast-header">
        <img src="" class="rounded mr-2" alt="">
        <strong class="mr-auto">{% block toast_title %}Notification{% endblock %}</strong>
        <small>{% block toast_time %}11:52{% endblock %}</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        {% block toast_body %}{% endblock %}
    </div>
</div>