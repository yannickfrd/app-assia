<form method="post" action="{{ path('export_model_delete', {'id': export_model.id}) }}" 
    onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce modèle d\'export ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ export_model.id) }}">
    <button class="btn btn-danger btn-sm shadow" title="Supprimer le modèle" 
        data-bs-toggle="tooltip" data-bs-placement="bottom">
        <span class="fas fa-trash-alt"></span>
    </button>
</form>
