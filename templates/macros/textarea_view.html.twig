{% macro get(value, key = null, trans = 'forms', type = null) %}{% apply spaceless %}
    {% if value not in ['', null] %}
        <div style="text-align: justify;">
            {% if key %}<b style="font-size: 16px;">{{ key|trans({}, trans) }} : </b>{% endif %}
            {% if type == 'pdf' %}{{ value|nl2br }}{% else %}<p>{{ value|replace({'\r\n': '</p><p>'})|striptags('<br><p>')|raw }}</p>{% endif %}
        </div>
    {% endif %}
{% endapply %}{% endmacro %}