{# Boucle sur les personnes dans le suivis afin de les afficher #}
{% macro loopSupportPeople(entity_name, people, support, theme_color = "dark") %}
    <div class="mb-4">
        {% for key, eval_person in people %}
            {% set supportPerson = eval_person.vars.value.supportPerson %}
            {% set active = supportPerson.status == support.status %}
            <button type="button" id="heading-{{ entity_name }}-{{ key }}" class="btn btn-outline-{{ active ? theme_color : 'secondary' }} 
                {{ active == false ? 'delete' }} {{ loop.first ? 'active' }} mb-2" 
                title="{{ supportPerson.roleToString }} - {{ supportPerson.person.age }} an(s)" 
                data-toggle="collapse" data-target="#collapse-{{ entity_name }}-{{ key }}" aria-expanded="false" 
                aria-controls="collapse-{{ entity_name }}-{{ key }}" data-person-key="{{ key }}">{{ supportPerson.person.fullname }}
            </button>
        {% endfor %}
    </div>
{% endmacro %}